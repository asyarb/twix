{
	"include": ["./**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"strictNullChecks": true,

		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,

		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,

		"allowJs": false,
		"skipLibCheck": true,
		"resolveJsonModule": true
	}
}
